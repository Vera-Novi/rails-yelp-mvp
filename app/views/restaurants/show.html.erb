<h1>Your restaurant</h1>


<h2>Name: <%= @restaurant.name %></h2>
<p>Address: <%= @restaurant.address %></p>
<p>Category: <%= @restaurant.category %></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %>--<%=review.rating %></li>
  <% end %>
</ul>
<br>


<div class="btn btn-warning"><%= link_to 'Show all', restaurants_path %></div>


<div class="btn btn-info"><%= link_to 'Add review', new_restaurant_review_path(@restaurant.id) %></div>
